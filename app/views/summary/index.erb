<h1>Summary</h1>

<table class="table table-striped table-hover" id="data_table" data-pagination="true" data-search="true" data-row-style="rowStyle">
    <thead>
      <tr>
        <th>Instance type</th>
        <th>Availability Zone</th>
        <th>Platform</th>
        <th>Network</th>
        <th>Tenancy</th>
        <th>Total Instances</th>
        <th>Total Reservations</th>
      </tr>
    </thead>
    <tbody>
      <% @summary.each do |type, elem1| %>
        <% elem1.each do |az, elem2| %>
          <% elem2.each do |platform, elem3| %>
            <% elem3.each do |vpc, elem4| %>
              <% elem4.each do |tenancy, total| %>
                <tr>
                  <td><%= type %></td>
                  <td><%= az %></td>
                  <td><%= platform %></td>
                  <td><%= vpc %></td>
                  <td><%= tenancy %></td>
                  <td><%= total[0] %></td>
                  <td><%= total[1] %></td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
<h2>Legend</h2>
<table class="table table-striped table-hover" id="legend_table">
  <thead>
    <tr>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr class='warning'>
      <td>There are more instances than reserved instances. Oportunity to move other reserved instances to this class or buy new RIs</td>
    </tr>
    <tr class='danger'>
      <td>There are more reserved instances than instances. Oportunity to move reserved instances to other class</td>
    </tr>
  </tbody>
</table>

<script type="text/javascript">
$(function () {
    $('#data_table').bootstrapTable({showExport: true});
    $('#legend_table').bootstrapTable({showHeader: false});
    });

function rowStyle(row, index) {
  inst = parseInt(row[5]);
  reserv = parseInt(row[6]);

  if (inst > reserv) {
    return { classes: 'warning' };
  }
  if (reserv > inst) {
    return { classes: 'danger' };
  }
  return {};
}
</script>
